<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputTextActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputFood"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="32dp"
        android:hint="@string/WhatDidYouEat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:helperTextEnabled="false"
        app:boxStrokeColor="@color/waikawa_gray"
        app:startIconDrawable="@drawable/ic_food">

    <com.google.android.material.textfield.TextInputEditText

        android:id="@+id/inputFoodText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textAutoCorrect"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirmTextButton"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:text="@string/Confirm"
        android:layout_marginTop="20dp"
        android:background="@drawable/all_button"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:onClick="onConfirmText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputFood" />

</androidx.constraintlayout.widget.ConstraintLayout>