<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="@color/san_juan" />
            <gradient android:angle="-90" android:startColor="@color/shiraz" android:endColor="@color/monarch"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="#ff355e" />
            <gradient android:angle="-90" android:startColor="@color/shiraz" android:endColor="@color/monarch"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="@color/san_juan" />
            <gradient android:angle="-90" android:startColor="@color/shiraz" android:endColor="@color/monarch"  />
        </shape>
    </item>
</selector>